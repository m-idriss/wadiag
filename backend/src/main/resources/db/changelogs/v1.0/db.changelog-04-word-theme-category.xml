<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- ChangeSet for word_theme_category table in version 1.0 -->
    <changeSet id="3" author="Idriss">
        <createTable tableName="word_theme_category">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" />
            </column>
            <column name="word_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_word_theme_category_word"
                    references="word(id)" />
            </column>
            <column name="theme_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_word_theme_category_theme"
                    references="theme(id)" />
            </column>
            <column name="category_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_word_theme_category_category"
                    references="category(id)" />
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>